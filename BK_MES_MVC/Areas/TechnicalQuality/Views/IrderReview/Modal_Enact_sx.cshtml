@model db_models.sxcxb
@{
    ViewBag.Title = "Modal_Enact_sx";
    Layout = null;
}

<script src="~/Scripts/jquery.form.js" type="text/javascript"></script>
<link href="~/Content/bootstrap-select.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-select.js" type="text/javascript"></script>
<script src="~/Scripts/bootstrap-select-zh_CN.js" type="text/javascript"></script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h3>酸洗程序编辑</h3>
</div>

<form id="appform" onsubmit="return false;">
    <div class="modal-body">
        <div class="form-group" style="display:none">
            <input type="text" class="form-control" name="b" id="b" value="@Model.zdbh" />
        </div>
        <div class="form-group">
            <label>酸洗程序号</label>
            @Html.DropDownListFor(m => m.zdbh, (List<SelectListItem>)ViewBag.sxcx, "请选择酸洗程序", new { @class = "selectpicker form-control", data_style = "btn-white", data_live_search = "true", data_size = "5" })
        </div>
    </div>
</form>

<div class="modal-footer">
    <div class="form-group">
        <button type="button" class="btn btn-default" id="btn_save">保存</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
    </div>
</div>

<script>

    var col_sx =@ViewBag.column-1;
    var msg, val;
    msg = ""; val = "";
    $(function () {

        $("#btn_save").click(function () {
            msg = $('#zdbh').find("option:selected").text();
            val = $('#zdbh').find("option:selected").val();
            if (msg == "" || val == "") {
                alert("请选择合适的酸洗程序号");
            } else {

                //$('#sxh').text(v + "酸洗线");
                //$('#sxh').attr("value", val);
                //temp += 1;
                //Arr_sx.push({ "序号": temp, "酸洗号": v });

                $('#t_body').find('tr').eq(col_sx).find('dd').text(msg);
                $('#t_body').find('tr').eq(col_sx).find('dd').val(val);

                //$('#t_body').find('tr').eq(col).children().eq(3).children().children().eq(1).text(v);

                ModalHide();
            }
        });

    });

    $('#zdbh').selectpicker({});
</script>

