<script type="text/javascript">

    var user =@ViewBag.user;

    if (user == 0) {
        window.location.href ="/APP/APP_BK_Ckxx/Index";
    }


    var No = 0;
    var _dd = 0;

    $('#thead').addClass("disabled").hide();

    $('#search').click(function () {

        _dd = $('#dd').val();
        var add_body = "";

        $('#tbody').empty();

        if (_dd == 0) {

            alert("请输入订单号");

        } else {


            $.getJSON('/APP_BK_Ckxx/select_dd_ck', { dd: _dd }, function (data) {

                if (JSON.parse(data) == 0) {

                        alert("不能拣货");

                    } else {

                        if (JSON.parse(data) == 1) {

                            alert("查询有误");
                        }

                        $('#thead').removeClass("disabled").show();

                        $.each(JSON.parse(data), function (i, item) {

                            i += 1;
                            add_body += "<tr><td>" + i + "</td>";

                            $.each(item, function (key, value) {
                                switch (key) {
                                    case "ph":
                                        ph = value;
                                        add_body += "<td>" + ph + "</td>";
                                        break;
                                    case "gg":
                                        gsmc = value;
                                        add_body += "<td>" + gsmc + "</td>";
                                        break;
                                    case "gh":
                                        bzhun = value;
                                        add_body += "<td>" + bzhun + "</td>";
                                        break;
                                    case "zb":
                                        gc = value;
                                        add_body += "<td>" + gc + "</td>";
                                        break;
                                    case "khdm":
                                        jz = value;
                                        add_body += "<td>" + jz + "</td>";
                                        break;
                                    case "jh":
                                        cpgg = value;
                                        add_body += "<td>" + cpgg + "</td>";
                                        break;
                                    case "kw_old":
                                        kw_old = value;
                                        add_body += "<td>" + kw_old + "</td>";
                                        break;
                                }

                            })
                            add_body += "<td><button id='" + i + "' onclick='btn_pk_delete(this," + i + ")'>删除</button></td></tr>";
                            No = i;
                        })

                        $('#tbody').append(add_body);
                }
            });
        }

    })



    var _v = [];
    var ck_bool = false;
    var v;

    $('#CP_code').bind("keydown", function (event) {

        v = $('#CP_code').val();
        var add_body = "";
        var bool_td = false;
        var bool = true;


        if (event.keyCode == 13 && v != "") {


            //判断是否输入订单号查询
            if (_dd==0) {

                alert("请先输入订单号查询订单");
            } else {

                for (var i = 0; i < _v.length; i++) {
                    if (_v[i] == v) {
                        bool = false;
                        alert("该批号已扫描");
                    }
                }

                if (bool) {

                    $('#thead').removeClass("disabled").show();

                    $('#tbody').find("tr").each(function (i) {

                        var tr = $(this).children();
                        var td = tr.eq(1).text();

                        if (td == v) {
                            //根据扫描的批号自动匹配表格中所对应的批号  并赋予背景颜色
                            $(this).css('background-color', '#BFEFFF');
                            bool_td = true;
                            _v.push(td);
                            ck_bool = true;

                            _save();
                        }
                    })


                    if (!bool_td) {

                        $.getJSON('/APP_BK_Ckxx/CP_Select', { CP_barcode: v, mark: 3 }, function (data) {
                            if (JSON.parse(data) == 1) {

                                alert("未查询到该批号的信息");

                            } else if (JSON.parse(data) == 2) {

                                alert("当前盘库未结束");

                            } else if (JSON.parse(data) == 5) {

                                alert("该批号成品被其他订单锁定，请勿操作");

                            } else {

                                ck_bool = true;
                                //扫描的值放入数组中

                                _v.push(v);
                                console.info(data);
                                $.each(JSON.parse(data), function (i, item) {

                                    No += 1;

                                    add_body = "<tr style='background-color:#FFD700'><td>" + No + "</td>";

                                    $.each(item, function (key, value) {
                                        switch (key) {
                                            case "ph":
                                                add_body += "<td>" + value + "</td>";
                                                break;
                                            case "gg":
                                                add_body += "<td>" + value + "</td>";
                                                break;
                                            case "gh":
                                                add_body += "<td>" + value + "</td>";
                                                break;
                                            case "zb":
                                                add_body += "<td>" + value + "</td>";
                                                break;
                                            case "khdm":
                                                add_body += "<td>" + value + "</td>";
                                                break;
                                            case "jh":
                                                add_body += "<td>" + value + "</td>";
                                                break;
                                            case "kw_old":
                                                add_body += "<td>" + value + "</td>";
                                                break;
                                        }
                                    })
                                })

                                add_body += "<td><button id='" + No + "' onclick='btn_pk_delete(this," + No + ")'>删除</button></td></tr>";
                                $('#tbody').append(add_body);

                                _save();
                            }
                        })

                    }


                }
            }

            
            $('#CP_code').val("");
        }
    })



    function _save() {

        if (ck_bool) {

            //直接将该批号出库
            $.ajax({
                url: '/APP_BK_Ckxx/CP_ck_save',
                data: { parm1: JSON.stringify(v), dd: _dd },
                async: false,
                success: function (data) {

                    $.each(JSON.parse(data), function (i, item) {
                        $.each(item, function (key, value) {

                            if (key == "back_success" && value != null) {

                            } else if (key == "back_error" && value != null) {

                                _error.push(value);
                                back_status(_success, _error);

                            }
                        })
                    })

                }
            })
        }

    }



    //出库
    $("#Save").click(function () {

        //var temp = [];

        var _success = [];
        var _error = [];


        //$("#tbody").find("tr").each(function () {
        //    temp.push($(this).children(".ph").text());
        //})
        if (_v.length == 0) {

            $('#back_body').text("出库信息不全");

        } else {

            $.ajax({
                url: '/APP_BK_Ckxx/CP_ck_save',
                data: { parm1: JSON.stringify(_v), dd: _dd },
                async: false,
                success: function (data) {

                    $.each(JSON.parse(data), function (i, item) {
                        $.each(item, function (key, value) {
                            //console.info(key + value);
                            if (key == "back_success" && value != null) {
                                _success.push(value);
                            } else if (key == "back_error" && value != null) {
                                _error.push(value);
                            }
                        })
                    })

                    back_status(_success, _error);
                }
            })

        }

    })


    //删除
    function btn_pk_delete(src, id) {

        console.info(_v);
        //获取到被删除的批号
        var i = $("#" + id + "").parent().parent().find("td").eq(1).text();
        //删除数组中被删除的批号
        _v.splice(_v.indexOf(i), 1);
        console.info(_v);

        $("#" + id + "").parent().parent().remove();
    }





</script>
<script src="~/Areas/Scripts/modal.js"></script>




