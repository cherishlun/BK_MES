                    <td>#</td>
                    <td>批号</td>
                    <td>规格</td>
                    <td>钢号</td>
                    <td>组别</td>
                    <td>客户代码</td>
                    <td>卷号</td>
                    <td>库位</td>
                </tr>
            </thead>
            <tbody id="tbody"></tbody>
        </table>
