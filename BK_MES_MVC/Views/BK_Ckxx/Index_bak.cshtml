
@{
    ViewBag.Title = "仓库信息表";
    Layout = "~/Views/Shared/_Layout_2018.cshtml";
}

@section scripts {
    @Scripts.Render("~/bundles/table-alert")
    @Styles.Render("~/Content/table-alert")

    <!--验证-->
    @Scripts.Render("~/bundles/bootstrapValidator")
    @Styles.Render("~/Content/bootstrapValidator")

    <link href="~/Content/bootstrap-select.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap-select.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap-select-zh_CN.js" type="text/javascript"></script>

    <!-- ECharts -->
    <script src="~/Scripts/echarts-all.js"></script>

    <script type="text/javascript">
        var _KcWyl = @ViewBag._KcWyl;
        var _KcZyl = @ViewBag._KcZyl;

        var _AqKc_Mc='@ViewBag._AqKc_Mc';
        var _AqKc_Sdzl ='@ViewBag._Aqkc_Sdzl';
        var _AqKc_Kczl ='@ViewBag._Aqkc_Kczl';

    </script>
    <!-- ECharts demo data -->
    <script src="~/Scripts/echarts-demo3.js"></script>



}
   <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-sm-3">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <span class="label label-danger pull-right"></span>
                        <h5>截止时间</h5>
                    </div>
                    <div class="ibox-content">
                        <h1 class="no-margins">@ViewBag._Now</h1>
                        <div class="stat-percent font-bold text-danger">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <span class="label label-success pull-right">月</span>
                        <h5>库存量</h5>
                    </div>
                    <div class="ibox-content">
                            <h1 class="no-margins">@ViewBag._KcSl<small>件数</small>&nbsp; @ViewBag._KcZl<small>Kg</small></h1>
                        <div class="stat-percent font-bold text-success">
                            <a href="javascript:parent.addMenuTab('/Bk_Ckxx/KuCun_View','库存管理')">详情</a> <i class="fa fa-bolt"></i>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-sm-3">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <span class="label label-info pull-right">月</span>
                        <h5>入库量</h5>
                    </div>
                    <div class="ibox-content">
                        <h1 class="no-margins">@ViewBag._RkSl<small>件数</small>&nbsp;  @ViewBag._RKZl <small>Kg</small></h1>
                        <div class="stat-percent font-bold text-info">
                            详情<i class="fa fa-level-up"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <span class="label label-primary pull-right">月</span>
                        <h5>出库量</h5>
                    </div>
                    <div class="ibox-content">
                        <h1 class="no-margins">@ViewBag._CkSl <small>件数</small>&nbsp;  @ViewBag._CkcZl <small>Kg</small></h1>
                        <div class="stat-percent font-bold text-navy">
                            详情 <i class="fa fa-level-up"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>库位图表</h5>
                        
                    </div>
                    <div class="ibox-content">
                        <div class="echarts" id="echarts-pie-chart"></div>

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>安全库存</h5>
                    </div>
                    <div class="ibox-content">

                        <div class="echarts" id="echarts-bar-chart"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="col-sm-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>当前入库表格</h5>
                          
                        </div>
                        <div class="ibox-content">

                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                    <tr>
                                        <th>钢丝名称</th>
                                        <th>批号</th>
                                        <th>重量</th>
                                        <th>入库时间</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ foreach (System.Data.DataRow _dr in ((System.Data.DataTable)ViewBag._Data_Rk).Rows)
                                        {
                                    <tr>
                                        <td>
                                            @_dr[0].ToString()
                                        </td>
                                        <td>
                                            @_dr[1].ToString()
                                        </td>
                                        <td>
                                            @_dr[2].ToString()
                                        </td>
                                        <td>
                                            @_dr[5].ToString()
                                        </td>
                                    </tr>
                                            }

                                        }
                                    </tbody>
                                </table>

                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>当前出库表格</h5>
                        </div>
                        <div class="ibox-content">

                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                    <tr>
                                        <th>钢丝名称</th>
                                        <th>批号</th>
                                        <th>重量</th>
                                        <th>出库名称</th>
                                        <th>出库时间</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ foreach (System.Data.DataRow _dr in ((System.Data.DataTable)ViewBag._Data_Ck).Rows)
                                        {
                                            <tr>
                                                <td>
                                                    @_dr[0].ToString()
                                                </td>
                                                <td>
                                                    @_dr[1].ToString()
                                                </td>
                                                <td>
                                                    @_dr[2].ToString()
                                                </td>
                                                <td>
                                                    @_dr[3].ToString()
                                                </td>
                                                <td>
                                                    @_dr[4].ToString()
                                                </td>
                                            </tr>
                                        }

                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="col-sm-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>最近一次盘点信息</h5>
                        </div>
                        <div class="ibox-content">
                            <table class="table underline">
                                <tbody>
                                    <tr>
                                        <td>
                                            <strong>开始盘点时间：</strong>
                                        </td>
                                        <td>@ViewBag._Pk_KsSj   </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>结束盘点时间：</strong>
                                        </td>
                                        <td>@ViewBag._Pk_JsSj   </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>盘点数量：</strong>
                                        </td>
                                        <td>@ViewBag._Pk_Sl 件</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>盘点重量：</strong>
                                        </td>
                                        <td>@ViewBag._Pk_Zl Kg</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>说明：</strong>
                                        </td>
                                        <td>@ViewBag._Pk_Bz</td>
                                    </tr>
                                </tbody>
                            </table>



                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
