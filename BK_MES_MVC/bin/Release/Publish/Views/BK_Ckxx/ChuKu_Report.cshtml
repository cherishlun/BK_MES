
@{
    ViewBag.Title = "ChuKu_Report";
    Layout = "~/Views/Shared/_Layout_2018.cshtml";
}

@section scripts {
    @Scripts.Render("~/bundles/table-alert")
    @Styles.Render("~/Content/table-alert")

    <!--验证-->
    @Scripts.Render("~/bundles/bootstrapValidator")
    @Styles.Render("~/Content/bootstrapValidator")

    <link href="~/Content/bootstrap-select.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap-select.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap-select-zh_CN.js" type="text/javascript"></script>

    <script src="~/Scripts/bootstrap-datetimepicker.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.zh-CN.js" type="text/javascript" charset="UTF-8"></script>
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />

    <script src="~/Scripts/Public/MyHelper.js" type="text/javascript"></script>
    <script src="~/Scripts/Bk_Ckxx/ChuKu_Report.js" type="text/javascript"></script>
    <script src="~/Scripts/Public/MyTables.js" type="text/javascript"></script>



}

<div class="panel-body" style="padding:0px;">
    <div class="container">
        <div class="row">
            <div class="table-responsive">
                <div id="toolbar">
                    <form class="form-inline">
                        <div class="form-group">
                            <select class="selectpicker" data-style="btn-white" id="srq" onchange="selectOnchang(this)">
                                <option value="1" selected="selected">日报</option>
                                <option value="2">周报</option>
                                <option value="3">月报</option>
                                <option value="4">自定义</option>
                            </select>
                        </div>
                        <div class="form-group" style="width:350px">
                            <div id="xx1" class="input-group date form_date col-md-2" data-date="" data-date-format="yyyy-mm-dd" data-link-field="dtp_input" data-link-format="yyyy-mm-dd" style="width:auto">
                                <input type="text" class="form-control" name="drq1" id="drq1" placeholder="开始日期" style="width:120px;" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                            <div class="input-group date form_date2 col-md-2" data-date="" data-date-format="yyyy-mm-dd" data-link-field="dtp_input" data-link-format="yyyy-mm-dd" style="width:auto">
                                <input type="text" class="form-control" name="drq2" id="drq2" placeholder="结束日期" style="width:120px;" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <select class="selectpicker" data-style="btn-white" id="shz" name="shz" multiple>
                                <option value="1">钢号</option>
                                <option value="2">规格</option>
                                <option value="3">组别</option>
                                <option value="4">客户代码</option>
                            </select>
                        </div>
                        <div class="form-group" style="width:65px">
                            <input type="text" class="form-control" name="txt_gh" id="txt_gh" placeholder="钢号..." style="width:65px">
                        </div>
                        <div class="form-group" style="width:65px">
                            <input type="text" class="form-control" name="txt_gg" id="txt_gg" placeholder="规格..." style="width:65px">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="txt_zb" id="txt_zb" placeholder="组别..." style="width:65px">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="txt_khbm" id="txt_khbm" placeholder="客户编码..." style="width:100px">
                        </div>
                        <button type="button" class="btn btn-primary queryButton" id="btn_find">查询</button>
                        <button type="button" class="btn btn-primary queryButton" id="btn_print">导出Excel</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <table id="ArbetTable"></table>
    <input type="hidden" id="txt_ssl" />
    <input type="hidden" id="txt_szl" />

</div>

<script type="text/javascript">
    $('.form_date').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0,
        format: 'yyyy-mm-dd',
        endDate: new Date()
    });

    $('.form_date2').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0,
        format: 'yyyy-mm-dd',
        endDate: new Date()
    });

</script>
