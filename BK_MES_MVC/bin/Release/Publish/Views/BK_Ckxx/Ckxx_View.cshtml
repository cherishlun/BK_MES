
@{
    ViewBag.Title = "Ckxx_View";
    Layout = "~/Views/Shared/_Layout_2018.cshtml";
}

@section scripts {
    @Scripts.Render("~/bundles/table-alert")
    @Styles.Render("~/Content/table-alert")

    <!--验证-->
    @Scripts.Render("~/bundles/bootstrapValidator")
    @Styles.Render("~/Content/bootstrapValidator")

    <link href="~/Content/bootstrap-select.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap-select.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap-select-zh_CN.js" type="text/javascript"></script>

    <script src="~/Scripts/bootstrap-datetimepicker.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.zh-CN.js" type="text/javascript" charset="UTF-8"></script>
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />

    <script src="~/Scripts/Bk_Ckxx/Ckxx_View.js"></script>
    <style type="text/css">
        .table {
            table-layout: fixed;
            word-break: break-all;
        }
    </style>
}

<!--表格-->
<div class="panel-body" style="padding:0px;">

    <div class="container">
        <div class="row">
            <div class="table-responsive">
                <div id="toolbar">
                    <form class="form-inline">
                        <div class="form-group">
                            <button id="btn_add" type="button" class="btn btn-default" data-toggle="modal">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>导入成品信息
                            </button>
                        </div>
                        <div class="form-group">
                            <select class="selectpicker" data-style="btn-white" id="szt">
                                <option value="0" selected="selected">-全部--</option>
                                <option value="1">未处理</option>
                                <option value="2">已入库</option>
                                <option value="3">已出库</option>
                            </select>
                        </div>
                        <div class="form-group" style="width:100px">
                            <input type="text" class="form-control" name="sjbh" id="sjbh" placeholder="数据编号" style="width:100px">
                        </div>
                        <div class="form-group" style="width:150px">
                            <input type="text" class="form-control" name="scpmc" id="scpmc" placeholder="请输入成品名称" style="width:150px">
                        </div>
                        <div class="form-group" style="width:100px">
                            <input type="text" class="form-control" name="sph" id="sph" placeholder="请输入批号" style="width:100px">
                        </div>
                        <div class="form-group" style="width:350px">
                            <div class="input-group date form_date col-md-2" data-date="" data-date-format="yyyy-mm-dd" data-link-field="dtp_input" data-link-format="yyyy-mm-dd" style="width:auto">
                                <input type="text" class="form-control" name="srkrq1" id="srkrq1" placeholder="加入开始日期" style="width:120px;" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                            <div class="input-group date form_date col-md-2" data-date="" data-date-format="yyyy-mm-dd" data-link-field="dtp_input" data-link-format="yyyy-mm-dd" style="width:auto">
                                <input type="text" class="form-control" name="srkrq2" id="srkrq2" placeholder="加入结束日期" style="width:120px;" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <button type="button" class="btn btn-primary queryButton" id="btn_find">查询</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <table id="ArbetTable" width="1000p"></table>
    <!--输入-->
    <div id="myModal" class="modal fade" role="dialog" aria-labelledby="modal" style="overflow:scroll">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                请稍等，正在加载表单.....
            </div>
        </div>
    </div>

</div>


<script type="text/javascript">
    $('.form_date').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });

</script>



