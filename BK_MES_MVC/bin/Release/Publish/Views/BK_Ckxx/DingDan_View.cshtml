                    contentType: "application/json",
                    dataType: "json",
                    queryParams: oTableInit.queryParams2,
                    ajaxOptions: { ckbh2: row.zdbh },
                    clickToSelect: true,
                    pagination: true,                   //是否显示分页（*）
                    pageNumber: 1,                       //初始化加载第一页，默认第一页
                    uniqueId: "zdbh",
                    pageSize: 10,
                    pageList: [10, 25],
                    contentType: "application/x-www-form-urlencoded",
                    columns: [
                        {
                            field: 'cpmc',
                            title: '成品名称'
                        },
                        {
                            field: 'gh',
                            title: '钢号'
                        },
                        {
                            field: 'gg',
                            title: '规格'
                        },
                        {
                            field: 'zb',
                            title: '组别'
                        },
                        {
                            field: 'yjl',
                            title: '应交量'
                        },
                        {
                            field: 'khdm',
                            title: '客户代码'
                        },
                        {
                            field: 'bz1',
                            title: '备注1'
                        },
                        {
                            field: 'bz2',
                            title: '备注2'
                        },
                        {
                            field: 'bz3',
                            title: '备注3'
                        },
                        {
                            field: 'jrrq',
                            title: '操作日期'
                        },
                        {
                            field: 'zdbh',
                            title: '明细编号',
                            visible: false
                        },
                        {
                            field: 'operate',
                            title: '操作',
                            formatter: operateFormatter2(row.ddztm, row, index), //自定义方法，添加操作按钮\
                            events: operateEvents2   //事件注册
                            , width: 200
                        },
                    ],
                    onLoadSuccess: function (data) {
                    },
                    onLoadError: function () {
                        swal("数据加载失败！");
                    },
                });
            };
            //得到查询的参数
            oTableInit.queryParams2 = function (params, row) {
                var temp = {   //这里的键的名字和控制器的变量名必须一直，这边改动，控制器也需要改成一样的
                    limit: params.limit,   //页面大小
                    offset: params.offset,  //页码
                };
                return temp;
            };

            return oTableInit;
        };



        //
        var TableInit_Select = function () {
            var oTableInit_Select = new Object();
            //初始化Table
            oTableInit_Select.Init = function () {
                $('#Arbet_Select_Table').bootstrapTable({
                    height: 330,              //高度调整
                    url: '',         //请求后台的URL（*）
                    method: 'get',                      //请求方式（*）
                    toolbar: '#toolbar_select',                //工具按钮用哪个容器
                    striped: true,                      //是否显示行间隔色
