
@{
    ViewBag.Title = "RuKu_Log_View";
    Layout = "~/Views/Shared/_Layout_2018.cshtml";
}

@section scripts {
    @Scripts.Render("~/bundles/table-alert")
    @Styles.Render("~/Content/table-alert")

    <!--验证-->
    @Scripts.Render("~/bundles/bootstrapValidator")
    @Styles.Render("~/Content/bootstrapValidator")

    <link href="~/Content/bootstrap-select.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap-select.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap-select-zh_CN.js" type="text/javascript"></script>

    <script src="~/Scripts/bootstrap-datetimepicker.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.zh-CN.js" type="text/javascript" charset="UTF-8"></script>
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />

    <script src="~/Scripts/Bk_Ckxx/RuKu_Log_View.js"></script>

    <style type="text/css">
        .table {
            table-layout: fixed;
            word-break: break-all;
        }
    </style>
}

<!--表格-->
<div class="panel-body" style="padding:0px;">

    <div class="container">
        <div class="row">
            <div class="table-responsive">
                <div id="toolbar">
                    <form class="form-inline">
                        <div class="form-group">
                            <select class="selectpicker" data-style="btn-white" id="srkfs">
                                <option value="0" selected="selected">-入库方式--</option>
                                <option value="1">扫码入库</option>
                                <option value="1">其他入库</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="scpmc" id="scpmc" placeholder="请输入成品名称">
                        </div>
                        <div class="form-group" style="width:350px">
                            <div class="input-group date form_date col-md-2" data-date="" data-date-format="yyyy-mm-dd" data-link-field="dtp_input" data-link-format="yyyy-mm-dd" style="width:auto">
                                <input type="text" class="form-control" name="srkrq1" id="srkrq1" placeholder="入库开始日期" style="width:120px;" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                            <div class="input-group date form_date col-md-2" data-date="" data-date-format="yyyy-mm-dd" data-link-field="dtp_input" data-link-format="yyyy-mm-dd" style="width:auto">
                                <input type="text" class="form-control" name="srkrq2" id="srkrq2" placeholder="入库结束日期" style="width:120px;" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <button type="button" class="btn btn-primary queryButton" id="btn_find">查询</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <table id="ArbetTable"></table>
</div>


<script type="text/javascript">
    $('.form_date').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });

</script>

