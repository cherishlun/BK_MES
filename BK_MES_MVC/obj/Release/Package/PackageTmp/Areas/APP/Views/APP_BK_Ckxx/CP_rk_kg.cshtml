<script type="text/javascript">

    //入库 移位的标识
    var _let =@ViewBag._id;

    if (_let == 1) {

        $('h2').html("成品入库");
    } else if (_let==2) {

        $('h2').html("成品移位");
    }

    var _td = 0;

    //全局变量 用来存储已扫描的批号 防止重复扫码
    var _v = [];
    
    $('#thead').addClass("disabled").hide();

    $('#CP_Code').bind("keydown", function (event) {
        var v = $('#CP_Code').val();
        var ph;
        var cpgg;
        var bzhun;
        var gsmc;
        var gc;
        var jz;
        //旧的库位号  在移库查询时需显示原始库位号
        var kw_old;
        var add_body = "";
        var bool = true;


        if (event.keyCode == 13 && v != "") {
            for (var i = 0; i < _v.length; i++) {
                if (_v[i] == v) {
                    alert("该批号已扫描");
                    bool = false;
                }
            }
            if (bool) {

                $.getJSON('/APP_BK_Ckxx/CP_Select', { CP_barcode: v, mark: _let }, function (data) {

                    if (JSON.parse(data) == 0) {

                        alert("该批号已入库");

                    } else if (JSON.parse(data) == 1) {

                        alert("未查出该批号的详细信息");

                    } else if (JSON.parse(data) == 2) {

                        alert("当前盘库未结束");

                    } else {

                        //扫描的值放入数组中
                        _v.push(v);

                        _td += 1;

                        $('#thead').removeClass("disabled").show();
                        //console.info(data);
                        $.each(JSON.parse(data), function (i, item) {

                            add_body = "<tr><td>" + _td + "</td>";

                            $.each(item, function (key, value) {
                                switch (key) {
                                    case "ph":
                                        ph = value;
                                        add_body += "<td>" + ph + "</td>";
                                        break;
                                    case "gg":
                                        gsmc = value;
                                        add_body += "<td>" + gsmc + "</td>";
                                        break;
                                    case "gh":
                                        bzhun = value;
                                        add_body += "<td>" + bzhun + "</td>";
                                        break;
                                    case "zb":
                                        gc = value;
                                        add_body += "<td>" + gc + "</td>";
                                        break;
                                    case "khdm":
                                        jz = value;
                                        add_body += "<td>" + jz + "</td>";
                                        break;
                                    case "jh":
                                        cpgg = value;
                                        add_body += "<td>" + cpgg + "</td>";
                                        break;
                                    case "kw_old":
                                        kw_old = value;
                                        add_body += "<td>" + kw_old + "</td>";
                                        break;
                                }
                            })
                        })

                        add_body += "<td><button id='" + _td + "' onclick='btn_pk_delete(this," + _td + ")'>删除</button></td></tr>";
                        $('#tbody').append(add_body);

                    }
                });
            }

            $('#CP_Code').val("");
        }
    })


